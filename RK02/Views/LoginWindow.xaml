<Window x:Class="RK02.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#7FFF00">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Вход в систему" 
               FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="10"/>

        <Label Grid.Row="1" Grid.Column="0" 
               Content="Логин:" 
               VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 x:Name="UsernameTextBox" 
                 Width="200" 
                 Margin="5"/>

        <Label Grid.Row="2" Grid.Column="0" 
               Content="Пароль:" 
               VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" 
                     x:Name="PasswordBox" 
                     Width="200" 
                     Margin="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   x:Name="ErrorTextBlock"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Войти" 
                Width="150"
                HorizontalAlignment="Center"
                Click="LoginButton_Click"/>

        <Separator Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="10" Height="1" Background="Gray"/>

        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Войти как гость" 
                Width="150"
                HorizontalAlignment="Center"
                Click="GuestButton_Click"/>
    </Grid>
</Window>