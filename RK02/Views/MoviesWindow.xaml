<Window x:Class="RK02.Views.MoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог фильмов" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    Background="#7FFF00" 
                    Height="50" 
                    VerticalAlignment="Center">
            <Label Content="Каталог фильмов" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10,0"/>
            <Label x:Name="UserInfoLabel" 
                   FontSize="14" 
                   Margin="50,0"/>
            <Button x:Name="LogoutButton" 
                    Content="Выйти" 
                    Margin="300,0" 
                    Width="80"
                    Click="LogoutButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    x:Name="ControlPanel"
                    Margin="5">
            <Label Content="Поиск:"/>
            <TextBox x:Name="SearchTextBox" 
                     Width="200" 
                     TextChanged="SearchTextBox_TextChanged"/>

            <Label Content="Жанр:" Margin="10,0,0,0"/>
            <ComboBox x:Name="GenreComboBox" 
                      Width="150" 
                      SelectionChanged="GenreComboBox_SelectionChanged"/>

            <Label Content="Сортировка:" Margin="10,0,0,0"/>
            <ComboBox x:Name="SortComboBox" 
                      Width="150"
                      SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem Content="По умолчанию"/>
                <ComboBoxItem Content="По рейтингу ↑"/>
                <ComboBoxItem Content="По рейтингу ↓"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    x:Name="AdminPanel"
                    Margin="5">
            <Button x:Name="AddButton" 
                    Content="Добавить фильм" 
                    Click="AddButton_Click"/>
            <Button x:Name="DeleteButton" 
                    Content="Удалить выбранный" 
                    Click="DeleteButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="3" 
                  x:Name="MoviesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="5"
                  LoadingRow="MoviesDataGrid_LoadingRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"/>
                <DataGridTextColumn Header="Название" 
                                    Binding="{Binding Title}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Год" 
                                    Binding="{Binding Year}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Жанр" 
                                    Binding="{Binding Genre.Name}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Рейтинг" 
                                    Binding="{Binding Rating}" 
                                    Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Всего фильмов: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>